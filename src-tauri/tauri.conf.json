{
  "$schema": "https://schema.tauri.app/config/2",
  "app": {
    "security": {
      "csp": "default-src 'self'; script-src 'self'; style-src 'self' 'unsafe-inline'"
    },
    "windows": [
      {
        "height": 800,
        "minHeight": 600,
        "minWidth": 800,
        "title": "Harbor",
        "width": 1200
      }
    ]
  },
  "build": {
    "beforeBuildCommand": "npm run build",
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "frontendDist": "../dist"
  },
  "bundle": {
    "active": true,
    "createUpdaterArtifacts": false,
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "targets": "all"
  },
  "identifier": "io.harbor.desktop",
  "plugins": {
    "updater": {
      "active": false,
      "endpoints": [
        "https://github.com/Bakobiibizo/harbor/releases/latest/download/latest.json"
      ],
      "pubkey": "UPDATER_PUBKEY_PLACEHOLDER",
      "_note": "Updater is disabled until a real signing keypair is generated. Run `tauri signer generate -w ~/.tauri/harbor.key` and replace the pubkey above."
    }
  },
  "productName": "Harbor",
  "version": "0.2.0"
}
